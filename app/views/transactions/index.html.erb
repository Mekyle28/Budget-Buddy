<p style="color: green"><%= notice %></p>

<h1>Transactions</h1>

<div class="row">
  <div class="col-4 my-auto">
    <h3>Add a new transaction:</h3>
  </div>
  <div class="col-4 my-auto">
    <%= link_to "New transaction", new_transaction_path, data: { turbo_frame: "modal"}, class:"btn btn-outline-success" %>
  </div>
  <div class="col my-auto">
    <%= form_with url: "/search", method: :get do |form| %>
    <%= form.text_field :search, placeholder:"Search" %>
  </div>
  <div class="col-1 my-auto">
    <%= form.submit "Search", class:"btn btn-success" %>
    <% end %>
  </div>  
</div>

<div class="transactions">
  <div class="container text-center">
    <div class="row">
      <div class="col my-auto">Date:</div>
      <div class="col my-auto">Merchant:</div>
      <div class="col my-auto">Amount:</div>
      <div class="col my-auto">Category:</div>
      <div class="col my-auto">Account:</div>
      <div class="col-1 my-auto">Edit:</div>
    </div>
    <% @transactions.each do |transaction| %>
      <%= render transaction %>
    <% end %>
  </div>
</div>
