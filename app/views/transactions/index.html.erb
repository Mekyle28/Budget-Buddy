<p style="color: green"><%= notice %></p>

<h1>Transactions</h1>

<div class="transactions-nav">
  <div>
    <strong>
      Add a new transaction:
    </strong>
    <%= link_to "New transaction", new_transaction_path, class:"btn btn-outline-success" %>
  </div>
  <div class="transactions-nav">
    <%= form_with(url: transactions_path, method: :get) do %>
    <%= text_field_tag :search, params[:search], placeholder:"Search" %>
    <%= submit_tag "Search", class:"btn btn-success" %>
    <% end %>
  
    <% if params[:search].present? %>
      <%= link_to "Clear", [:transactions], class:"btn btn-warning" %>
    <% end %>

  </div>

</div>

<div class="transactions">
  <div class="container text-center">
    <div class="row">
      <div class="col my-auto">Date:</div>
      <div class="col my-auto">Merchant:</div>
      <div class="col my-auto">Amount:</div>
      <div class="col my-auto">Category:</div>
      <div class="col my-auto">Account:</div>
      <div class="col-1 my-auto">Edit:</div>
    </div>
    <% if @transactions.present? %>
      <% @transactions.each do |transaction| %>
        <%= render transaction %>
      <% end %>
    <% else %>
      No transactions found
    <% end %>
  </div>
</div>
