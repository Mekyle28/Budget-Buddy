<div class="transaction-form">
  <%= form_with(model: transaction) do |form| %>
    <% if transaction.errors.any? %>
      <div class="error-message">
        <div class="error-header">
          <h3><%= pluralize(transaction.errors.count, "error") %> occured preventing save:</h3>
        </div>
        <div class="error-messages">
          <ul>
            <% transaction.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

  <div class="container">
    <div class="row">
      <div class="col my-auto">
        <%= form.label :date %>
      </div>
      <div class="col my-auto">
        <%= form.date_field :date, class:"form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col my-auto">
        <%= form.label :merchant %>
      </div>
      <div class="col my-auto">
        <%= form.text_field :merchant, class:"form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col my-auto">
        <%= form.label :amount %>
      </div>
      <div class="col my-auto">
        <%= form.number_field :amount, step: 0.01, class:"form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col my-auto">
        <%= form.label :category %>
      </div>
      <div class="col my-auto">
        <%= form.select :category_id, options_from_collection_for_select(Category.all.order(:name), :id, :name, @transaction.category_id), { include_blank: true }, class:"form-control form-select" %>
      </div>
    </div>

    <div class="row">
      <div class="col my-auto">
        <%= form.label :account %>
      </div>
      <div class="col my-auto">
        <%= form.select :account_id, options_from_collection_for_select(Account.all.order(:name), :id, :name, @transaction.account_id), { include_blank: true }, class:"form-control form-select" %>
      </div>
    </div>
    
    <div class="row">
      <div class="col">
        <%= link_to "Back", [:transactions], class:"btn btn-primary" %>
      </div>

      <div class="col my-auto">
        <%= form.submit "Save", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

  </div>  
</div>
