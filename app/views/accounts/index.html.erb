<p style="color: green"><%= notice %></p>
<article class="accounts-page">
  <div class="accounts-title">
    <h1>Accounts</h1>
    <span class="new-account-button">
    <%= link_to "New account", new_account_path, data: { turbo_frame: "modal"}, class: "btn btn-outline-success" %>
    </span>
  </div>
  <section class="display-accounts">
    <div class="accounts-container">
      <span id="accounts" class="accounts">
        <% @accounts.each do |account| %>
          <%= render account %>
        <% end %>
      </span>
    </div>
  </section>
</article>


